<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= button_to 'Show', project, method: :get %></td>
        <% if user_signed_in? %> 
        <td><%= button_to 'Edit', edit_project_path(project), method: :get %></td>
        <td><%= button_to 'Destroy', project, :method => :delete %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Project', new_project_path, method: :get %>

